<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.seasar.kvasir</groupId>
    <artifactId>component-project</artifactId>
    <version>3.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>kvasir-base</artifactId>
  <packaging>jar</packaging>
  <name>Kvasir/Sora Base</name>
  <description>Kvasir/Sora base components</description>
  <repositories>
    <repository>
      <id>maven.seasar.org</id>
      <name>The Seasar Foundation Maven2 Repository</name>
      <url>http://maven.seasar.org/maven2</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>snapshot.maven.seasar.org</id>
      <name>The Seasar Foundation Maven2 Snapshot Repository</name>
      <url>http://maven.seasar.org/maven2-snapshot</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>maven.seasar.org</id>
      <name>The Seasar Foundation Maven2 Repository</name>
      <url>http://maven.seasar.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>org.seasar.kvasir</groupId>
      <artifactId>kvasir-util</artifactId>
      <version>3.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.2</version>
      <scope>provided</scope>
    </dependency>
    <!-- 他のアーティファクトが依存するバージョンが若いXOMに負けてしまわないように。 -->
    <dependency>
      <groupId>net.skirnir.xom</groupId>
      <artifactId>xom</artifactId>
      <version>0.0.6</version>
    </dependency>
    <dependency>
      <groupId>net.skirnir.xom</groupId>
      <artifactId>xom-tiger</artifactId>
      <version>0.0.6</version>
    </dependency>
  </dependencies>
</project>
